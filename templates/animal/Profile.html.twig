{% extends 'base.html.twig' %}{% block stylesheets %}    <link rel="stylesheet" href="{{ asset('styles/Profile.css') }}">{% endblock %}{% block body %}    <div class="row row-image">        <div class="offset-4 col-4">            <div class="img-thumbnail"                 style='background-image: url("{{ animal.image }}")'></div>        </div>    </div>    <div class="row row-data">        <div class="offset-2 col-8">            <div class="list-group">                <a href="#" class="list-group-item list-group-item-action active">                    Profil                </a>                <a href="#" class="list-group-item list-group-item-action">Nom: {{ animal.name }}</a>                <a href="#" class="list-group-item list-group-item-action">Race: {{ animal.race }}</a>                <a href="#" class="list-group-item list-group-item-action">Sexe: {{ animal.gender }}</a>                <a href="#"                   class="list-group-item list-group-item-action">Age: {{ animal.birthDate|date('d/m/Y') }}</a>            </div>        </div>    </div>{% endblock %}