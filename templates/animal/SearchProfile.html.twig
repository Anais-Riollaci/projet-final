{% extends 'base.html.twig' %}{% form_theme ProfileSearch 'bootstrap_4_layout.html.twig' %}{% block stylesheets %}    <link rel="stylesheet" href="{{ asset('style/searchProfile.css') }}">{% endblock %}{% block body %}    <div class="container">        <h1>Recherche de profil</h1>        <div class="row">            <div id="form-group row" class="col-md-3 col-sm-12">                {{ form_start(ProfileSearch) }}                {{ form_widget(ProfileSearch) }}                {{ form_end(ProfileSearch) }}            </div>            <div class="col-md-9 col-sm-12">                <div class="row">                    {% for animal in animals %}                        <div class="col-6">                            <div class="animal">                                <a href="{{ path('profile_show', { 'id' : animal.id }) }}"                                   style="background-image: url({{ animal.image }})">                                </a>                                <h2 class="animal-name">{{ animal.name }}</h2>                            </div>                        </div>                    {% endfor %}                </div>            </div>        </div>    </div>{% endblock %}{% block javascripts %}    <script src="{{ asset('scripts/search_profile.js') }}"></script>{% endblock %}