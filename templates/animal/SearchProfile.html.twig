{% extends 'base.html.twig' %}{% form_theme ProfileSearch 'bootstrap_4_layout.html.twig' %}{% block stylesheets %}    <link rel="stylesheet" href="{{ asset('styles/searchProfile.css') }}">{% endblock %}{% block body %}    <h1>Recherche de profil</h1>    <div class="row">        <div class="col-3">            {{ form_start(ProfileSearch) }}            {{ form_widget(ProfileSearch) }}            {{ form_end(ProfileSearch) }}        </div>        <div class="col-9">            <div class="row">                {% for animal in animals %}                    <div class="col-6">                        <div class="animal">                            <a href="{{ path('profile_show', { 'id' : animal.id }) }}">                                <img src="{{ animal.image }}">                            </a>                            <h2 class="animal-name">{{ animal.name }}</h2>                        </div>                    </div>                {% endfor %}            </div>        </div>    </div>{% endblock %}{% block javascripts %}    <script src="{{ asset('scripts/search_profile.js') }}"></script>{% endblock %}