{% extends 'base.html.twig' %}{% block body %}    <table class="col-sm-5 col-md-12 table animal-table">        <thead class="thead-orange">        <tr>            <th colspan="9" scope="col">Profils</th>        </tr>        </thead>        <tbody>        <tr>            <td class="d-none d-sm-table-cell">ID</td>            <td>Nom</td>            <td class="d-none d-sm-table-cell">Espèce</td>            <td>Race</td>            <td>Sexe</td>            <td>Age</td>            <td class="d-none d-sm-table-cell">Catégorie</td>            <td class="d-none d-sm-table-cell">Photo</td>        </tr>        {% for animal in animals %}            <tr>                <td class="d-none d-sm-table-cell">{{ animal.id }}</td>                <td>{{ animal.name }}</td>                <td class="d-none d-sm-table-cell">{{ animal.species.name }}</td>                <td>{{ animal.race.name }}</td>                <td>{{ animal.gender }}</td>                <td>                    {% set difference = date().diff(date(animal.birthDate)) %}                    {% if difference|date("%y") >= 1 %}                        {{ difference|date("%y") }} ans                    {% else %}                        {{ difference|date("%m") }} mois                    {% endif %}                </td>                <td class="d-none d-sm-table-cell">                    {% if animal.category %}                        {{ animal.category.title }}                    {% endif %}                </td>                <td class="d-none d-sm-table-cell"><img src="{{ animal.image }}" alt="Photo de {{ animal.name }}"></td>                <td style="text-align: right;">                    <a href="{{ path('change_animal', {id: animal.id}) }}">                        <button type="submit" class="btn btn-outline-light"><i class="far fa-edit"></i></button>                    </a>                    <a href="{{ path('delete_animal', {id: animal.id}) }}">                        <button type="submit" class="btn btn-outline-light"><i class="fas fa-trash-alt"></i></button>                    </a>                </td>            </tr>        {% endfor %}        </tbody>    </table>    <button id="bouton" class="btn btn-outline-light">Ajouter un animal</button>    <div class="hide" id="formToHide">        {{ form_start(NewAnimal) }}        {{ form_row(NewAnimal.name, { 'label': 'Nom' }) }}        {{ form_row(NewAnimal.specie, { 'label': 'Espèce' }) }}        {{ form_row(NewAnimal.race, { 'label': 'Race' }) }}        {{ form_row(NewAnimal.gender, { 'label': 'Sexe' }) }}        {{ form_row(NewAnimal.birthdate, { 'label': 'Date de naissance' }) }}        {{ form_row(NewAnimal.category, { 'label': 'Catégorie' }) }}        {{ form_end(NewAnimal) }}    </div>{% endblock %}{% block javascripts %}    <script src="{{ asset('scripts/gestion_profile_animal.js') }}"></script>{% endblock %}{% block stylesheets %}    <link rel="stylesheet" href="{{ asset('style/gestion_animal.css') }}">{% endblock %}