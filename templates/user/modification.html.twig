{% extends 'base.html.twig' %}
{%  form_theme form 'bootstrap_4_layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/inscription.css') }}">
{% endblock %}
{% block body %}
<div class="container">
    {{ form_start(form) }}
        <div class="form">
            <div>
                {{ form_row(form.lastName, {'label': 'Nom :'}) }}
                {{ form_row(form.firstName, {'label': 'Prénom:'}) }}
                {{ form_row(form.birthDate, {'label': 'Date de naissance:'}) }}
                {{ form_row(form.phoneNumber,{'label': 'N°téléphone:'}) }}
            </div>
            <div>
                {{ form_row(form.email,{'label': 'Email'}) }}
                {{ form_row(form.street,{'label': 'Adresse:'}) }}
                {{ form_row(form.zipCode,{'label': 'Code Postal:'}) }}
                {{ form_row(form.city,{'label': 'Ville:'}) }}
            </div>
        </div>
        <div class="col text-center">
            <button type="submit" class="btn btn-success">Enregistrer les modifications </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}